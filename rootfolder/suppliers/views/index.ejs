<%- include ('partials/header') %>
    <div class="table-wrapper">
        <% if (suppliers.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Supplier Name</th>
                        <th scope="col">Supplier Abbreviation</th>
                        <th scope="col">Account Number</th>
                        <th scope="col">Primary Contact</th>
                        <th scope="col">Address</th>
                        <th scope="col">Phone Number</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% suppliers.forEach((supplier, index) => { %>
                        <tr>
                            <th scope="row"><%= supplier.id %></th>
                            <td><%= supplier.name %></td>
                            <td><%= supplier.abbreviation %></td>
                            <td><%= supplier.account %></td>
                            <td><%= supplier.contact %></td>
                            <td><%= supplier.address %></td>
                            <td><%= supplier.phone %></td>
                            <td>
                                <a href="/edit/<%= supplier.id %>" target="_blank" rel="noopener" class="btn btn-sm btn-success">Edit</a>
                                <a href="/delete/<%= supplier.id %>" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <p class="text-center">No suppliers found. Go <a href="/add" >here</a> to add suppliers.</p>
        <% } %>
    </div>
</div>
</body>
</html>
